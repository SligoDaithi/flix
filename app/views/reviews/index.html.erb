<h1>Reviews for <%= link_to @movie.title, @movie %></h1>
<ul class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <%= render "shared/stars", percent: review.stars_as_percent %>
      <div class="review-profile">
        <%= profile_image(review.user, 35) %>
        <p>
          <%= link_to review.user.name, review.user %>
          <span class="date">
            <%= time_ago_in_words(review.created_at) %> ago
          </span>
        </p>
      </div>
      <p>
        <%= review.comment %>
      </p>
      <%= link_to "Edit", edit_movie_review_path(@movie, review), class: "button" %>
      <%= link_to "Delete", movie_review_path(@movie, review), class: "button",
            data: { turbo_method: :delete, turbo_confirm: "This action cannot be undone. Are you sure?" } %> 
    </li>
  <% end %>
</ul>
<section class="movie-details">
  <div class="reviews">
    <%= link_to "Write review", new_movie_review_path(@movie), class: "review" %>
  </div>
</section>
